@model MVCEliminatoria_EdgarDuarte_1193520.Models.Fecha



@{
    ViewBag.Title = "Fecha";
}

<h2>Fecha</h2>


@using (Html.BeginForm("RegistroDetalle", "Equipo", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
