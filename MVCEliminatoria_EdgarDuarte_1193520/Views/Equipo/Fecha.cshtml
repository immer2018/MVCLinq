                @Html.ValidationMessageFor(model => model.fkIdE1, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            @Html.LabelFor(model => model.fkIdE2, htmlAttributes: new { @class = "control-label col-md-2" })
